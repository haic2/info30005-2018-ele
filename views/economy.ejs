                        <a class="dropdown-item" href="../station">Find Polling Stations</a>
                    </div>
                </li>
            </ul>
        </div>

    </div>


<div class="title">
    <h1>Economy Policies</h1>
</div>

<div class="grid-containertwo">
    <div class="item1">
        <div class="breadcrumbs">
            <div><a href="/">Home</a>/</div>
            <div><a href="/category">Category</a>/</div>
            <div><a href="/category/economy">Economy</a></div>
        </div>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" id="myInput" onkeyup="myFunction()" type="search" placeholder="Search" aria-label="Search">
        </form>

    </div>

    <div class="accordion" id="myUL">
        <%for(var i in policies){%>

        <%if(policies[i].category=="economy"){%>
        <div class="card">
            <div class="card-header">
                <a class="card-link" data-toggle="collapse" href="#collapse<%=i%>">
                    <h5 class="sty"><%= policies[i].title %>------<%= policies[i].state %></h5>

                </a>
            </div>
            <div id="collapse<%=i%>" class="collapse" data-parent="#accordion">
                <div class="card-body desc1">

                    <h5>The policy maker:</h5> <p><%= policies[i].policymaker %></p>
                    <h5>Description:</h5><p> <%= policies[i].description %></p>
                </div>
            </div>
        </div>
        <%}%>
        <%}%>

    </div>
</div>



    <div class="title">
        <p>&copy; 2018 Team about:blank.</p>
    </div>





    <script>
        function myFunction() {
            var input, filter, ul, h5, a, i;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            classs = document.getElementById("myUL");
            h5 = classs.getElementsByTagName("h5");
            for (i = 0; i < h5.length; i++) {
                a = h5[i];
                if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    h5[i].style.display = "";
                } else {
                    h5[i].style.display = "none";

                }
            }
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="../public/js/jquery.js"></script>
    <script src="../public/js/bootstrap.min.js"></script>

</body>
</html>