                        <div class="dropdown-menu" >
                            <a class="dropdown-item" href="../queueol">Queue Online</a><br>
                            <a class="dropdown-item" href="../station">Find Polling Stations</a>
                        </div>
                    </li>
                    <li><a class="smoothScroll" href="#contact">Contact</a></li>
               </ul>
          </div>

     </div>
</div>


<!-- HOME SECTION -->
<section id="home" >
               <div class="col-sm-8"></div>
               <div class="col-sm-4" id="scrollbtn">
                    <a href="#about" class="wow fadeInUp btn btn-link section-btn" data-wow-delay="1s">Catalogue</a><br>
                    <a href="#skill" class="wow fadeInUp btn btn-link section-btn" data-wow-delay="1s">Online Queue</a><br>
                    <a href="#work" class="wow fadeInUp btn btn-link section-btn" data-wow-delay="1s">Find Voting stations</a>
               </div>
</section>


<!-- ABOUT SECTION -->
<section id="about">
     <div class="container">
          <div class="row">

               <div class="col-md-8 col-sm-12">
                    <div class="about-thumb">
                         <div class="wow fadeInUp section-title" data-wow-delay="0.6s">
                              <h2>Catalogue</h2>  
                              <p><strong>Explore election information by your interest</strong></p>
                         </div>
                         <div class="wow fadeInUp" data-wow-delay="0.8s">
